#recommendations

- var sectionTitle = data.recommandation.sectionTitle
include ../section-title/section-title.pug 

//- first recommandation
h3.about-me__lead-title= data.recommandation.header
.column(span="row")
  each items in data.recommandation.recommandation1
    .recommandation-box 
    .recommandation-info 
      .recommandation-image
        img.imagine(src=`${items.avatarUrl}`, alt="avatar")
      .recommandation-name=items.name
      .recommandation-position=items.position
    .recommandation-description
      p=items.description

//- second recommandation
.column(span="row" height="10")
.column(span="row")
  each items in data.recommandation.recommandation2
    .recommandation-box 
    .recommandation-info 
      .recommandation-image
        img.imagine(src=`${items.avatarUrl}`, alt="avatar")
      .recommandation-name=items.name
      .recommandation-position=items.position
    .recommandation-description
      p=items.description


//- green arrow down
.column(span="row")        
    button.disc-green     
        i.icon__arrow-down 
        span.button-text 
.column(span="row" height="10")
